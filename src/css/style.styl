@import 'nib/gradients'

transition-mixin()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

transition-transform-mixin()
  -webkit-transition -webkit-transform arguments
  -moz-transition -moz-transform arguments
  -o-transition -o-transform arguments
  transition transform arguments

transition-position-mixin()
  -webkit-transition left arguments
  -moz-transition left arguments
  -o-transition left arguments
  transition left arguments

html, body
  width 100%
  height 100%
  overflow hidden
  margin 0
  padding 0
  background-image url(/img/bg.png)

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color #222
  min-width 900px
  transition-mixin background-position 0.5s ease-in-out

a, a:visited, a:active
  color #df5e0e
  text-decoration none




// Coming soon page
.notyet  
  text-align center
  
  h1
    font-size 86px
    color #444
    text-shadow 1px 1px 0 #BBB, 2px 2px 0 #999, 3px 3px 0 #888, 4px 3px 1px #888, 5px 3px 2px #888
    font-family 'Alice', serif
    width 400px
    margin 50px auto 20px
  
  p
    line-height 30px
    margin 20px auto
    font-size 12px
    color #444


// Navigation
header
  z-index 16
  position fixed
  top 0
  left 0
  right 0
  height 110px
  min-width 900px
  background-color #261800
  text-align center
  vertical-align middle
  border-bottom 1px solid #100
  box-shadow 5px 0 10px rgba(10,20,0,0.8)
  
  nav
    vertical-align top
    margin-top 80px
    display inline-block

    a
      margin-top 40px
      color #fff
      text-transform uppercase
      text-decoration none
      font-family 'Open Sans Condensed', sans-serif
      font-size 16px
      padding 0 8px 0 0      
      
      &:visited, &:active
        color #fff
      &:first-of-type
        text-shadow  2px 0 0 #000
      &:last-of-type
        text-shadow -2px 0 0 #000
      &:not(:last-of-type):after
        content: '|'
        padding-left 8px
        opacity 0.2
      &:after
        text-shadow 0px none
      &:hover
        color #fa2
        &:after
          color #fff
        
  a.logo
    display inline-block
    height 90px
    width 380px
    vertical-align top

    img
      z-index 32
      border 0 none
      padding: 0 25px
  
  #pptsalon
    z-index 30
    position fixed
    bottom 50px
    right 0px

    a 
      text-indent -50000px
      font-size 0px
      background-image url('/img/sprite.png')
      background-repeat no-repeat
      background-position 0 -320px
      width 36px
      height 38px
      display block
      transition-mixin width 0.2s ease-out

    &:hover
      a
        width 140px
        background-position 0 -360px

  a.register
    position absolute
    top 105px
    right 20px
    padding 0 35px
    opacity 0.6
    z-index 10
    transition-mixin opacity 0.3s ease-in-out, top 0.3s ease-out
    
    
    strong
      z-index 10
      text-indent -50000px
      background-image url('/img/sprite.png')
      background-repeat no-repeat
      display block
      height 150px
      width 90px

    &:hover
      background-image url('/img/sprite.png')
      background-repeat no-repeat
      background-position 0 -160px
      opacity 1.0
      top 110px

body.register a.register
  top -150px

body.about-event a[href="/about-event"],
body.about-hasgeek a[href="/about-hasgeek"],
body.schedule a[href="/schedule"],
body.home a[href="/home"],
body.venue a[href="/venue"],
body.videos a[href="/videos"],
body.sponsors a[href="/sponsors"],
body.credits a[href="/credits"],
body.register a[href="/register"]
  cursor default
  color #F84
  pointer-events none
  &:hover
    text-decoration none
    text-shadow none



// Grid Page

#outer
  z-index 8
  position fixed
  top 110px
  &.animated
    transition-mixin left 0.5s ease-in-out

section.panel
  position absolute
  top 2px
  z-index 4
  overflow auto
  background-position left 0px
  background-repeat no-repeat
  margin-right 5px
  
  &::-webkit-scrollbar
    width 7px
    height 7px
  &::-webkit-scrollbar-thumb
    margin 10px 0
    background rgba(200,160,100,0.8)
    border 1px solid rgba(0,0,0,0.1)
    
  .disable
