//@import 'nib/gradients'

transform-mixin()
  -moz-transform arguments
  -webkit-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

transition-mixin()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

transition-transform-mixin()
  -webkit-transition -webkit-transform arguments
  -moz-transition -moz-transform arguments
  -o-transition -o-transform arguments
  transition transform arguments

transition-position-mixin()
  -webkit-transition left arguments
  -moz-transition left arguments
  -o-transition left arguments
  transition left arguments

animation-mixin()
  -webkit-animation arguments
  -moz-animation    arguments
  -ms-animation     arguments

column-count()
  -moz-column-count arguments
  -webkit-column-count arguments
  -o-column-count arguments
  column-count arguments

column-gap()
  -moz-column-gap arguments
  -webkit-column-gap arguments
  -o-column-gap arguments
  column-gap arguments

@keyframes swing 
  0%
    -webkit-transform translate(0,2px)
  50%
    -webkit-transform translate(0,-2px)
  100%
    -webkit-transform translate(0,2px)


