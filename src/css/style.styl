@import 'nib/gradients'

html, body
  width 100%
  height 100%
  overflow hidden
  margin 0
  padding 0
  background-image url(/img/bg.png)

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color #222
  //background-image -webkit-gradient(radial, 50% 0%, 0, 50% 0%, 900, from(#555), to(#222))
  //background-image -moz-radial-gradient(center, #555, #222)

a
  color #df5e0e
  text-decoration none




// Coming soon page
.notyet  
  text-align center
  
  h1
    font-size 86px
    color #444
    text-shadow 1px 1px 0 #BBB, 2px 2px 0 #999, 3px 3px 0 #888, 4px 3px 1px #888, 5px 3px 2px #888
    font-family 'Alice', serif
    width 400px
    margin 50px auto 20px
  
  p
    line-height 30px
    margin 20px auto
    font-size 12px
    color #444




// Navigation

header
  z-index 16
  position absolute
  top 0
  left 0
  right 0
  height 110px
  background-color #241400
  text-align center
  vertical-align middle
  border-bottom 1px solid #100
  box-shadow 5px 0 5px rgba(20,10,0,0.7)
  
  nav
    vertical-align top
    margin-top 80px
    display inline-block

    a
      margin-top 40px
      color #fff
      text-transform uppercase
      text-decoration none
      font-family 'Open Sans Condensed', sans-serif
      font-size 16px
      padding 0 8px 0 0
      text-shadow 2px 1px 0 #333
      
      &:not(:last-of-type):after
        content: '|'
        padding-left 8px
        
  a.logo
    display inline-block
    height 90px
    width 380px
    vertical-align top

    img
      z-index 32
      border 0 none
      padding: 0 25px




// Grid Page

#outer
  z-index 8
  position relative;

  -webkit-transform translate3d(0,0,0)
  -moz-transform translate(0,0)
  -o-transform translate(0,0)
  transform translate(0,0)

  &.animated
    -webkit-transition -webkit-transform 0.6s ease-in-out
    -moz-transition -moz-transform 0.6s ease-in-out
    -o-transition -o-transform 0.6s ease-in-out
    transition transform 0.6s ease-in-out

    section.panel
      -webkit-transition opacity 0.5s ease-in-out
      -moz-transition opacity 0.5s ease-in-out
      -o-transition opacity 0.5s ease-in-out
      transition opacity 0.5s ease-in-out

section.panel
  position absolute
  z-index 4
  margin 0
  top 0
  left 0
  right 0
  text-align center
  font-size 60px
  color #222
  text-shadow 0px 1px 0px #EEE, 0px 0px 4px #555
  padding-top 160px
  font-weight bold
  opacity 0.1

  article
    background-color rgba(60,10,0,0.2)
    border 1px solid rgba(0,0,0,0.1)
    border-radius 8px
    width 960px
    height 500px
    margin 0 auto


// IRC stuff

#topic
  height 20px
  overflow hidden

ol
  width 150px
  float  left
  list-style-type  none
  line-height  24px
  margin  0
  margin-right 10px
  padding  10px
  border  1px solid #EDC
  border-radius  3px
  background-color #FEFEF4
  overflow auto
  
#log
  padding 10px
  border  1px solid #FDD
  border-radius 3px
  overflow auto

  p
    margin -1px 0 0 0
    padding 4px 6px
    line-height 22px
    border 1px solid #F5F4F0

    span
      font-weight normal
      color #666

    &:nth-child(2n+1)
      background-color #F6F7F4

    &>u:after
      content ':'
      padding 0 3px
      font-weight normal
  
  time
    width 100px
    display inline-block
    text-align left
    color #888

  time,time:before,time:after
    font-size 12px
    font-family verdana
    color #888

  time:before
    content '['
    padding-right 2px

  time:after
    content ']'
    padding-left 2px
  
u
  text-decoration none
  font-weight bold
  color #444
  padding-right 5px
  display inline-block
  min-width 80px
  text-shadow 0 0 2px #fff




// Scrollbars

::-webkit-scrollbar
  width 6px
  height 6px

::-webkit-scrollbar-thumb
  background #EEE
  border-radius 10px
  opacity 0.2
  border 2px solid #FFF
  cursor pointer
  box-shadow none

ol:hover::-webkit-scrollbar-thumb, div:hover::-webkit-scrollbar-thumb
  opacity 1.0
  border 1px solid rgba(140, 140, 140, .5)
  background-color rgba(155, 155, 155, .5)

ol::-webkit-scrollbar-thumb:active, div::-webkit-scrollbar-thumb:active
  border 1px solid rgba(140, 140, 140, 1)
  background-color rgba(155, 155, 155, 1)
