// IRC stuff

#topic
  height 20px
  overflow hidden

ol
  width 150px
  float  left
  list-style-type  none
  line-height  24px
  margin  0
  margin-right 10px
  padding  10px
  border  1px solid #EDC
  border-radius  3px
  background-color #FEFEF4
